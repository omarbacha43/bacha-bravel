{% extends 'base.html.twig' %}

{% block title %}{% trans %}Modification de mot de passe{% endtrans %}{% endblock %}

{% block body %}
    <link rel="stylesheet" href="/registration/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/registration/css/style.css">

    <div class="main">
        <section class="signup">
            <!-- <img src="images/signup-bg.jpg" alt=""> -->
            <div class="container">
                <div class="signup-content">
                    {{ form_start(form) }}
                    <h2 class="form-title">Modification du mot de passe</h2>
                    <div class="form-group">
                        {{ form_row(form.oldPassword, {'label': "Ancien mot de passe"}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.newPassword, {'label': "Nouveau mot de passe"}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.confirmPassword, {'label': "Confirmer mot de passe"}) }}
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Enregistrer"/>
                    </div>
                    {{  form_end(form)}}
                </div>
            </div>
        </section>
    </div>

    <script src="/registration/jquery/jquery.min.js"></script>
    <script src="/registration/js/main.js"></script>

{% endblock %}

