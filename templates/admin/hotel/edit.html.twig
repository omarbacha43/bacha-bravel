{% extends 'admin/base.html.twig' %}

{% block title %}{% trans %}Edition de l'hotel {% endtrans %} {{ hotel.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="espace mt-lg-5"> <strong>Modification de l'hotel numéro °{{ hotel.id }} </strong></h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">{% trans %}Réctifier l'hotel{% endtrans %} ? </h4>
                </div>
                <div class="card-body">
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">
                        {% trans %}Enregistrer les modifications{% endtrans %}
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}

