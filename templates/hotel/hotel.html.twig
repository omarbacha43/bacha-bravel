    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 pr-lg-">
                    <div class="row">
                        {% for hotel in hotels %}
                            <div class="col-md-5 col-lg-4 ftco-animate">
                                <div class="project">
                                    <div class="img">
                                        <a href="hotel-single.html"><img src="{{ hotel.coverImage }}" class="img-fluid" alt="Colorlib Template"></a>
                                    </div>
                                    <div class="text">
